<h1>New product</h1>

<%= form_tag "/products", method: :post do %>
  <div class="form-group">
  Name: <input type="text" name="name" class="form_control">
  </div>
  <div class="form-group">
  Description: <input type="text" name="description" class="form_control">
  </div>
  <div class="form-group">
  Price: <input type="text" name="price" class="form_control">
  </div>
  <div class="form-group">
  Image: <input type="text" name="image" class="form_control">
  </div>
  <div class="form-group">
  Supplier: 
     <select name="supplier_id">
          <option value="" disabled selected>Select your option</option>
          <% @suppliers.each do |supplier| %>
            <option value="<%= supplier.id %>"><%= supplier.name %></option>
          <% end %>
        </select>
          
      </div>
      <input type="submit" value="Create Product" class="btn btn-default">
    <% end %>
  